{
  "name": "DoubleJ Spotify Redirect",
  "version": "1.3",
  "description": "Ensures desktop browsers go to the correct Spotify results page from the DoubleJ playlist page",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2,
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://play.spotify.com/*",
    "storage"
  ],
  "icons": {
    "48": "img/icon48.png",
    "96": "img/icon96.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon48.png",
    "default_title": "DoubleJ Spotify Redirect",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}